{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "g++ -std=c++17 main_server.cpp -o main_server -lws2_32"
  },
  "deploy": {
    "startCommand": "./main_server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

